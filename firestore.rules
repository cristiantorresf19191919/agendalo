rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Helper: Check if user is the document owner
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Helper: Get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role;
    }

    // Helper: Check if user is a business owner
    function isBusinessOwner(businessId) {
      return isAuth() &&
        get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // User Roles
    match /userRoles/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }

    // Businesses
    match /businesses/{businessId} {
      allow read: if true; // Public read for booking flow
      allow create: if isAuth();
      allow update, delete: if isBusinessOwner(businessId);
    }

    // Professionals
    match /professionals/{professionalId} {
      allow read: if true; // Public read for booking flow
      allow create: if isAuth() &&
        isBusinessOwner(request.resource.data.businessId);
      allow update, delete: if isAuth() &&
        isBusinessOwner(resource.data.businessId);
    }

    // Services
    match /services/{serviceId} {
      allow read: if true; // Public read for booking flow
      allow create: if isAuth() &&
        isBusinessOwner(request.resource.data.businessId);
      allow update, delete: if isAuth() &&
        isBusinessOwner(resource.data.businessId);
    }

    // Bookings
    match /bookings/{bookingId} {
      allow read: if isAuth() && (
        resource.data.customerId == request.auth.uid ||
        isBusinessOwner(resource.data.businessId)
      );
      allow create: if isAuth();
      allow update: if isAuth() && (
        resource.data.customerId == request.auth.uid ||
        isBusinessOwner(resource.data.businessId)
      );
      allow delete: if isAuth() &&
        isBusinessOwner(resource.data.businessId);
    }

    // Blocked Ranges
    match /blockedRanges/{rangeId} {
      allow read: if true; // Needed for slot availability checks
      allow create, update, delete: if isAuth() &&
        isBusinessOwner(resource.data.businessId);
    }
  }
}
